function pagination($variables){

  if(isset($_GET['page'])){
    $page = $_GET['page'];
  }
  else{
    $page = 0;
  }


  $output = '';

    $output .= '<ul class="ul_pagination">';
    $i = 0;
    foreach($variables['pagination'] as $p){
      $output .= '<li  class="li_pagination" style="display: inline;"><a href="'.$p .'"> ';
      if($i == $page){ $output .= ' <b class="active_pagination">';  }
      $output .= $i;
      if($i == $page){ $output .= ' </b>';  }
      $output .= ' </a></li>';
      $i++;
    }
    $output .= '</ul>'; 

    return $output;
}


