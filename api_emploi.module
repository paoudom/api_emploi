  $output .= '<li class="offre_date">Annonce '. $date .'</li>';
  $output .= '<li class="offre_contrat">'.$o['natureContrat'].' - '.$o['contrat']. '- 2 Mois</li>';
  
  
  
  $output .= '</ul>';
  
  $output .= '<p class="offre_description">' . $description . '(...)</p>';
  
